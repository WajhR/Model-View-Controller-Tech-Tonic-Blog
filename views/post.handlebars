<main class="container mt-5">
  <article>
    <h1>{{posttitle}}</h1>
    <p>Created by: {{user.name}} | Date: {{format_date date_created}}</p>
    <p>{{description}}</p>
  </article>
  {{#if logged_in}}
    <form class="new-form" class="mb-3">
      <div class="mb-3">
        <label for="comment" class="form-label">Add Comment:</label>
        <textarea
          class="form-control"
          id="new-comment"
          rows="3"
          placeholder="Add a comment..."
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  {{/if}}
  <h2>Comment History:</h2>
  {{#each comments}}
    <div class="comment mb-3">
      <p>{{commenttext}}</p>
      <p>By {{user.name}} on {{format_date date_created}}</p>
    </div>
  {{/each}}
</main>