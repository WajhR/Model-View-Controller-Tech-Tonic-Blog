<div class="container mt-5">
  <h2 class="mb-4">Create a Blog Contribution.</h2>
  <form class="new-post-form">
    <div class="mb-3">
      <label for="new-posttitle" class="form-label">Title:</label>
      <input
        type="text"
        class="form-control"
        id="new-posttitle"
        placeholder="Enter a title of your choice"
      />
    </div>
    <div class="mb-3">
      <label for="new-post" class="form-label">Content:</label>
      <textarea
        class="form-control"
        id="new-post"
        rows="5"
        placeholder="Enter content here"
      ></textarea>
    </div>
    <div class="mb-3">
      <button type="submit" class="btn btn-primary">Create Post</button>
    </div>
  </form>
</div>